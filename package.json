{
  "name": "streaming-service-launcher",
  "version": "0.2.0",
  "description": "Simple Launcher for streaming services",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder",
    "flatpak:build-unpacked": "electron-builder --linux --dir"
  },
  "build": {
    "appId": "com.aarron_lee.StreamingServiceLauncher",
    "productName": "StreamingServiceLauncher",
    "electronDownload": {
      "mirror": "https://github.com/castlabs/electron-releases/releases/download/v"
    },
    "files": [
      "index.js",
      "package.json",
      "services.json",
      "src/*",
      "js/*",
      "index.html",
      "preload.js"
    ],
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "${productName}_v${version}_linux.${ext}",
      "category": "Utility"
    }
  },
  "keywords": [],
  "author": "aarron-lee",
  "license": "MIT",
  "devDependencies": {
    "electron": "github:castlabs/electron-releases#v38.0.0+wvcus",
    "electron-builder": "^26.0.12"
  }
}
